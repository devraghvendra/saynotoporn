{
    "name": "Say No To Porn",
    "short_name": "SNTP",
    "description": "On a mission to stop people from watching porn with the help of @ashneer",
    "version": "1.0",
    "manifest_version": 2,
    "author": "Raghvendra Pathak",
    "icons": {
        "128": "logo.png"
    },
    "action": {
        "default_icon": {
            "128": "logo.png"
        },
        "default_title": "Say No To Porn :P"
    },
    "permissions": [
        "tabs",
        "tabCapture",
        "background",
        "contextMenus",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "background.js"
            ]
        }
    ]
}